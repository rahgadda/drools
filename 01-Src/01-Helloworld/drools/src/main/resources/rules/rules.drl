package rules;
import org.onestart.com.HelloWorld

rule "HelloWorld"
     dialect "mvel"
  when
    $helloWorld : HelloWorld(isGreetingDone==false, message : message)
  then
    System.out.println("Entered into rule-engine " + message);
    $helloWorld.setMessage("Welcome to Drools "+ message);
    $helloWorld.setIsGreetingDone(true);
    modify ($helloWorld);
end